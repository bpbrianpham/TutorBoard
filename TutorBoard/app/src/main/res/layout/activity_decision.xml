<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffdab9"
    tools:context="com.example.ben.tutorboard.DecisionActivity">

    <Button
        android:id="@+id/buttonTutor"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="95dp"
        android:background="@drawable/rounded_border_text_view"
        android:elevation="0dp"
        android:text="@string/tutor"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/buttonStudent"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/buttonTutor"
        android:background="@drawable/rounded_border_text_view"
        android:text="@string/student"
        android:textSize="30sp"/>

</RelativeLayout>
