<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_main"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:menu=""
    tools:context=".MessageFragment">

    <TextView
        android:id="@+id/taylorPro"
        android:layout_width="110dp"
        android:layout_height="48dp"
        android:layout_above="@+id/markPro"
        android:layout_alignLeft="@+id/markPro"
        android:layout_alignStart="@+id/markPro"
        android:layout_marginBottom="0dp"
        android:text="Taylor Left"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imageTaylor"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/personTaylor"
        android:layout_alignLeft="@+id/personTaylor"
        android:layout_alignStart="@+id/personTaylor"
        android:layout_alignTop="@+id/personTaylor"
        app:srcCompat="@drawable/ic_person_black_24dp" />

    <TextView
        android:id="@+id/markPro"
        android:layout_width="126dp"
        android:layout_height="39dp"
        android:layout_alignTop="@+id/divider"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="Mark Disco"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imageMark"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/personMark"
        android:layout_alignLeft="@+id/personMark"
        android:layout_alignStart="@+id/personMark"
        android:layout_alignTop="@+id/personMark"
        app:srcCompat="@drawable/ic_person_black_24dp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="71dp"
        android:background="@android:color/background_dark" />


    <Button
        android:id="@+id/personTaylor"
        android:layout_width="351dp"
        android:layout_height="69dp"
        android:layout_above="@+id/divider"
        android:layout_alignStart="@+id/divider"
        android:layout_alignLeft="@+id/divider"
        android:layout_marginBottom="-71dp"
        android:background="@drawable/borderless" />

    <Button
        android:id="@+id/personMark"
        android:layout_width="351dp"
        android:layout_height="69dp"
        android:layout_below="@+id/divider"
        android:layout_alignStart="@+id/divider"
        android:layout_alignLeft="@+id/divider"
        android:layout_marginBottom="-71dp"
        android:background="@drawable/borderless" />

</RelativeLayout>